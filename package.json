    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.0",
    "@babel/register": "^7.16.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
